.player{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background-color: black;
}
.movie{
	width: 100%;
	height: 440rpx;
}
/* 影片基本信息 */
.movie-info{
	padding: 40rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
}
.cover{
	width: 280rpx;
	height: 380rpx;
}
.movie-desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title{
	font-size: 30px;
}
.basic-info{
	color: darkgray;
	font-size: 14px;
	line-height: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
/* 评分 */
.score-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 20rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	background-color: white;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	-webkit-box-shadow: 3rpx 2rpx 10rpx #dedede;
	        box-shadow: 3rpx 2rpx 10rpx #dedede;
}
.score-words{
	font-size: 12px;
	color: grey;
}
.movie-score{
	margin-left: 8rpx;
	font-size: 26px;
	font-weight: bold;
	color: #FEAB2A;
	line-height: 60rpx;
}
.prise-count{
	font-size: 12px;
	color: grey;
	line-height: 44rpx;
}
/* 分割线 */
.line-wapper{
	padding: 0 20rpx;
}
.line{
	height: 1rpx;
	background: #DBDBDA;
}
/* 剧情介绍 */
.plots-block{
	padding: 20rpx 40rpx;
	background-color: #f7f4f9;
}
.plots-title{
	font-size: 14px;
	color: #A9A9A9;
}
.plots-desc{
	margin-top: 10rpx;
	font-size: 16px;
}
/* 剧照 */
.scroll-block{
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
}
.scroll-list{
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plot-image {
	width: 200rpx;
	height: 320rpx;
	margin-right: 10rpx;
}
/* 演职人员 */
.single-actor{
	width: 170rpx;
	height: 240rpx;
	margin-right: 10rpx;
}
.actor-wapper{
	display: inline-block;
}
.actor-name, .actor-role{
	width: 170rpx;
	text-align: center;
	font-size: 16px;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.actor-role{
	font-size: 14px;
	color: #A9A9A9;
}

